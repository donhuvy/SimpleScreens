<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false">
    <parameter name="organizationPartyId" required="true"/>
    <parameter name="timePeriodIdList" required="true"/>
    <transition name="accountLedger">
        <default-response url="../AccountLedger"/>
    </transition>

    <actions>
        <service-call name="mantle.ledger.LedgerReportServices.run#CashFlowStatement" out-map="context"
                      in-map="context"/>
        <set field="findEntryUrl" from="sri.buildUrlInfo('accountLedger')"/>
    </actions>
    <widgets>
        <render-mode>
            <text type="html,vuet,qvt" location="component://SimpleScreens/template/ledger/CashFlowStatement.html.ftl"
                  template="true" encode="false" no-boundary-comment="true"/>
        </render-mode>
    </widgets>
</screen>
